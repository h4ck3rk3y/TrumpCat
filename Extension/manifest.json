{
  "manifest_version": 2,
  "name": "TrumpCat",
  "description": "Takes care of your eyes by replacing all images of Trump with Cats",
  "version": "1.0",

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["jquery-3.0.0.min.js", "content.js"]
  }],

  "browser_action": {
    "default_title": "TrumpCat",
    "default_icon" : "icon.png"
  },

  "icons": {
    "128": "icon.png"
  },

  "background" : {
    "scripts": ["bg.js"]
  },

  "web_accessible_resources": [
    "hourglass.gif"
  ],

  "permissions": ["activeTab", "tabs"]
}