{
  "manifest_version": 2,
  "name": "TrumpCat",
  "description": "Takes care of your eyes by replacing all images of Trump with Cats",
  "version": "1.0",

  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],

  "browser_action": {
    "default_title": "TrumpCat",
    "default_icon" : "icon.png"
  },

  "icons": {
    "128:" "icon.png"
  },

  "permissions": ["activeTab"]
}